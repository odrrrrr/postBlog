{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "globals": { "Atomics": "readonly", "SharedArrayBuffer": "readonly" },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    //추가로 밑에 두 줄 추가하면 기존 빨강색 경고줄에서 노랑색으로 바뀜
    "no-unused-vars": "warn",
    "no-console": "off"
  }
}
